  "description": "Search through OpenCode conversation history with keyword, regex, and fuzzy search support",
  "main": "dist/history-search.ts",
  "module": "src/index.ts",
  "type": "module",
  "bin": {
    "opencode-history-search": "./install.ts"
  },
  "scripts": {
    "install:tool": "bun run install.ts",
